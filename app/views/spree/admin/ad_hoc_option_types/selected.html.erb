<%= render partial: 'spree/admin/shared/product_tabs', locals: {current: "Ad Hoc Option Types"} %>

<% content_for :page_actions do %>
  <%= yield :page_actions %>
  <%= external_page_preview_link(@product) %>
  <%= button_link_to('Add Option Types', spree.available_ad_hoc_admin_product_option_types_url(@product), { class: "btn-success", icon: 'add.svg', id: 'new_image_link' }) if can? :create, Spree::AdHocOptionType %>
<% end %>

<div id="selected-options">
  <%= render 'selected' %>
</div>
