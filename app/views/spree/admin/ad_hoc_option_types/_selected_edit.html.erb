    <%= form_for(ahot, url: admin_ad_hoc_option_type_url(ahot), html: { method: :put }) do |f| %>

    <tr>
      <td><%= ahot.option_type.name %></td>
      <td><%= ahot.option_type.presentation %></td>
      <td><%= ahot.is_required %></td>
      <td class="actions">
      <%= link_to_with_icon 'delete',  Spree.t("remove"), remove_admin_ad_hoc_option_type_url(ahot) %>
      </td>
    </tr>


    <tr>
      <td colspan="4">
        <h3><%= Spree.t("option_values") %></h3>
        <table class="index">
          <thead>
            <tr>
              <th><%= Spree.t("name") %></th>
              <th><%= Spree.t("display") %></th>
              <th><%= Spree.t("price_modifier") %></th>
              <th></th>
            </tr>
          </thead>
          <tbody id="option_values">
            <%= f.fields_for :option_values do |option_value_form| %>
              <%= render partial: "option_value_fields", locals: {f: option_value_form} %>
            <% end %>
          </tbody>
        </table>
      </td>
    </tr>

    <p class="form-buttons">
      <%= button Spree.t("update") %>
      <%= Spree.t("or") %> <%= link_to Spree.t("cancel"), selected_admin_ad_hoc_option_types_url(@product) %>
    </p>

<% end %>
