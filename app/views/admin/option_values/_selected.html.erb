<table class="index">
  <tr>
    <th><%= t("name") %></th>
    <th><%= t("presentation") %></th>
    <% if @product_option_type.has_price_modifier? %>
      <th><%= t("price_modifier") %></th>
    <% end %>
    <th>&nbsp;</th>
  </tr>
  <% @option_values.each do |potov| %>
    <tr>
      <td><%= potov.option_value.name %></td>
      <td><%= potov.option_value.presentation %></td>

      <% if @product_option_type.has_price_modifier? %>
	<td><%= potov.price_modifier %></td>
      <% end %>
      <td class="actions">
<!-- 	< % = link_to_with_icon('edit', t("edit"), admin_product_option_value_url (@product, option_type)) % >  -->
	<%= link_to_with_icon 'delete',  t("remove"), remove_admin_product_option_type_option_value_url(@product_option_type, potov.option_value) %> 
      </td>
    </tr>
  <% end %>
  <% if @option_values.empty? %>
   <tr><td colspan="3"><%= t(:none) %></td></tr>
  <% end %>
</table>

<div id="option-values"></div>
  <span id="new_opt_val_link">
    <%= link_to icon('add') + ' ' + t("add_option_value"), available_admin_product_option_type_option_values_url(@product_option_type), :remote => :true, :class => 'iconlink' %>
  </span>
