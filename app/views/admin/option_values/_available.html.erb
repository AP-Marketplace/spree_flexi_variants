<h4><%= t("add_option_values") %></h4>
<table class="index">
  <tr>
    <th><%= t("name") %></th>
    <th><%= t("presentation") %></th>
    <% if @product_option_type.has_price_modifier? %>
      <th><%= t("price_modifier") %></th>
    <% end %>
    <th>&nbsp;</th>
  </tr>
  <% @available_option_values.each do |ov| %>
    <tr>
      <td><%= ov.name %></td>
      <td><%= ov.presentation %></td>

      <% if @product_option_type.has_price_modifier? %>
	<td><%= text_field_tag :price_modifier, nil, :id=>dom_id(ov) %></td>
	<td class="actions">
           <%= link_to_function icon('add') + ' ' + t("select"),
               "submitForm('#{dom_id(ov)}', '#{select_admin_option_value_config_url(@product_option_type,ov)}')",
               :class => 'iconlink' %>
       </td>
      <% else %>
	<td class="actions"><%= link_to icon('add') + ' ' + t("select"),
          url_for(:controller => "admin/option_values",
                  :product_option_type => @product_option_type,
                  :id => ov,
                  :action => "select"),
                           :remote => true, :class => 'iconlink' %>
	</td>
      <% end %>
    </tr>
  <% end %>
  <% if @available_option_values.empty? %>
    <tr><td colspan="3"><%= t('none_available') %></td></tr>
  <% end %>
</table>

<%= form_tag '', :id=>'price_modifier_form', :method=>'post', :remote=>true, :style=>'display: none;' do %>
  <%= text_field_tag :price_modifier %>
<% end %>
