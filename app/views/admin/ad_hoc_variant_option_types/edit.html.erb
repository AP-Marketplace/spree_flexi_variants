<h1><%= t("editing_option_type") %></h1>
<%= render 'shared/error_messages', :target => @option_type %>
<%= form_for([:admin, @option_type.product,@option_type], :html => { :method => :put }) do |f| %>
<fieldset>
  <legend><%= t("editing_option_type") %></legend>
<!--   < % = render :partial => "form", :locals => { :f => f } % > -->
  <h3><%= t("option_values") %></h3>
  <table class="index">
    <thead>
      <tr>
        <th><%= t("name") %></th>
        <th><%= t("display") %></th>
        <th><%= t("price_modifier") %></th>
      </tr>
    </thead>
    <tbody id="option_values">
      <% @option_type.option_type.option_values.each do |ov| %>
	<tr class="option_value fields"> <!-- TODO: need id -->
	  <td class='name'><span> <%= ov.name %> </span></td>
	  <td class='presentation'><span> <%= ov.presentation %> </span></td>
	  <td class='price_modifier'><%= text_field_tag "price_modifier[#{ov.id}]" %></td>
	</tr>
      <% end %>
    </tbody>
  </table>

    <p class="form-buttons">
      <%= button t("update") %>
      <%= t("or") %> <%= link_to t("cancel"), admin_product_ad_hoc_variant_option_types_url(@product) %>
    </p>
</fieldset>
<% end %>
